    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
    "strict": true,
    "types": ["solid-start/env"],
    "baseUrl": "./",
    "paths": {
      "@banjo/atoms": ["src/design-system/atoms/index.ts"],
      "@banjo/directives": ["src/directives/index.ts"],
      "@banjo/theme": ["src/design-system/theme/index.ts"],
      "@banjo/utils": ["src/utils.ts"]
    }
  }
}
